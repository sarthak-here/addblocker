{
  "manifest_version": 3,
  "name": "Simple Ad Blocker",
  "version": "1.1",

  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "scripting"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["block.css"],
    "run_at": "document_idle"
  }
]

}
